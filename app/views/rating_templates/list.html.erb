<h1>
  Rating list
</h1>

<a href="/new_rating_form">
  Add a new rating
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Wine
    </th>

    <th>
      User
    </th>

    <th>
      Score
    </th>

    <th>
      Comment
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @ratings.each do |rating| %>
  <tr>
    <td>
      <%= rating.id %>
    </td>

    <td>
      <%= rating.wine_id %>
    </td>

    <td>
      <%= rating.user_id %>
    </td>

    <td>
      <%= rating.score %>
    </td>

    <td>
      <%= rating.comment %>
    </td>

    <td>
      <%= time_ago_in_words(rating.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(rating.updated_at) %> ago
    </td>

    <td>
      <a href="/ratings/<%= rating.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
