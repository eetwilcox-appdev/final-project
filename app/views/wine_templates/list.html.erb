<h1>
  WineWise Database
  <a href="/new_wine_form" class="btn btn-primary">+ Add a New Wine</a>
</h1>

<hr>

<table cellpadding="12">
  
  <tr>
    <th></th>
    <th>Name</th>
    <th>Varietal</th>
    <th>Price</th>
    <th>Location</th>
    <th>Vintage</th>
    <th>Global Rating</th>
    <th></th>
    <th></th>
  </tr>

  <% @wines.each do |wine| %>
  <tr>

    <td>
      <i class="fas fa-wine-glass"></i>
    </td>

    <td>
      <%= wine.name %>
    </td>

    <td>
      <%= wine.varietal %>
    </td>

    <td>
      <%= wine.price %>
    </td>

    <td>
      <%= wine.location_of_origin %>
    </td>

    <td>
      <%= wine.year_of_origin %>
    </td>

    <td>
      <%= @global_wine_rating %>
    </td>
    
    <td>
      <a href="/wines/<%= wine.id %>" class="btn btn-outline-primary">
        View Profile
      </a>
    </td>
    
    <td>
      <form action="/insert_favorite_record" method="post">
        <input type="hidden" name="wine_id" value="<%= wine.id %>">
        <input type="hidden" name="user_id" value="<%= current_user.id %>">
          <button class="btn btn-primary"><i class="fab fa-gratipay"></i>
            Add to My Wine List
          </button>
      </form>
    </td>


  </tr>
  <% end %>
</table>
