<h1>
  Add a new favorite
</h1>

<hr>

<%= render("favorite_templates/validation_failures.html.erb") %>

<form action="/insert_favorite_record" method="post">
  <div>
    <label for="wine_id">
      Wine
    </label>

    <input type="text" id="wine_id" name="wine_id" value="<%= @favorite.wine_id %>">
  </div>

  <div>
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" value="<%= @favorite.user_id %>">
  </div>

  <button>
    Create favorite
  </button>
</form>

<hr>

<a href="/favorites">
  Go back
</a>
