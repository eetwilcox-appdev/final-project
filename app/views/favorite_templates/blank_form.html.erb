<h1>
  Add a New Favorite
</h1>

<h3>Favorite a wine from our database:</h3>

<form action="/insert_favorite_record" method="post">
  <input type="hidden" id="user_id" name="user_id" value="<%= @favorite.user_id %>">

  <label for="wine_dropdown">Select a wine from the dropdown below:</label>
  <select id="wine_dropdown" name="wine_id" value="<%= @favorite.wine_id %>">
    <% Wine.all.order({ :name => :asc }).each do |a_wine| %>
        <option value="<%= a_wine.id %>">
        <%= a_wine.name %> <%= a_wine.varietal %>
        </option>
    <% end %>
    </select>

  <button>Add to My Wine List</button>
</form>

<h3>Don't see your wine listed here?</h3>
<button><a href="/new_wine_form">Add a New Wine</a></button>

