<h1>
  Clink list
</h1>

<a href="/new_clink_form">
  Add a new clink
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Sender
    </th>

    <th>
      Recipient
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @clinks.each do |clink| %>
  <tr>
    <td>
      <%= clink.id %>
    </td>

    <td>
      <%= clink.sender_id %>
    </td>

    <td>
      <%= clink.recipient_id %>
    </td>

    <td>
      <%= time_ago_in_words(clink.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(clink.updated_at) %> ago
    </td>

    <td>
      <a href="/clinks/<%= clink.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
